<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/favourite_cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#80000000"
        app:cardElevation="0dp"
        android:elevation="50dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/from_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/fromdate"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.202" />

            <TextView
                android:id="@+id/from_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/to_"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/from_d"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/from_d"
                app:layout_constraintTop_toBottomOf="@+id/from_d" />

            <TextView
                android:id="@+id/from_d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/fromdate"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/from_d2"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="@+id/from_d2"
                app:layout_constraintTop_toBottomOf="@+id/from_d2" />

            <TextView
                android:id="@+id/from_d4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/in_"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/from_d3"
                app:layout_constraintStart_toStartOf="@+id/from_d3"
                app:layout_constraintTop_toBottomOf="@+id/from_d3" />

            <TextView
                android:id="@+id/from_d5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="@string/to_"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/from_time"
                app:layout_constraintEnd_toStartOf="@+id/to_time"
                app:layout_constraintStart_toEndOf="@+id/from_time"
                app:layout_constraintTop_toTopOf="@+id/from_time" />

            <TextView
                android:id="@+id/from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="MAR 25 2023"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.036"
                app:layout_constraintStart_toEndOf="@+id/from_d"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.202" />

            <TextView
                android:id="@+id/country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="Cairo Africa"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/from_d4"
                app:layout_constraintStart_toEndOf="@+id/from_d4"
                app:layout_constraintTop_toBottomOf="@+id/from_time"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="10 : 30 Am"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/from_d3"
                app:layout_constraintEnd_toEndOf="@+id/to_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/to_date"
                app:layout_constraintTop_toTopOf="@+id/from_d3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="10 : 30 Am"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/from_d5"
                app:layout_constraintEnd_toStartOf="@+id/delete_alert"
                app:layout_constraintStart_toEndOf="@+id/from_time"
                app:layout_constraintTop_toTopOf="@+id/from_d5" />

            <TextView
                android:id="@+id/to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/b612_bold_italic"
                android:gravity="center"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="MAR 25 2023"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/from_d2"
                app:layout_constraintEnd_toEndOf="@+id/from_date"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="@+id/from_date"
                app:layout_constraintTop_toTopOf="@+id/from_d2" />

            <ImageView
                android:id="@+id/delete_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.86"
                app:layout_constraintStart_toEndOf="@+id/country_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.843"
                app:srcCompat="@drawable/baseline_delete_white_24" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>